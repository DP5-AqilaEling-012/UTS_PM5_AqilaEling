<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#B93666">

    <ImageView
        android:id="@+id/introductionImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/introduction_image_desc"
        android:scaleType="centerCrop"
        android:src="@drawable/pichasil"
        app:layout_constraintBottom_toTopOf="@id/ulangi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/calistoga"
        android:text="Jawaban benar: 5\nJawaban salah: 0"
        android:textColor="#E91E63"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/introductionImage"
        app:layout_constraintEnd_toEndOf="@id/introductionImage"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="@id/introductionImage"
        app:layout_constraintTop_toTopOf="@id/introductionImage"
        app:layout_constraintVertical_bias="0.227" />

    <TextView
        android:id="@+id/nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/archivo_black"
        android:text="100"
        android:textColor="#E91E63"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@id/introductionImage"
        app:layout_constraintEnd_toEndOf="@id/introductionImage"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toStartOf="@id/introductionImage"
        app:layout_constraintTop_toTopOf="@id/introductionImage"
        app:layout_constraintVertical_bias="0.208" />

    <Button
        android:id="@+id/ulangi"
        android:layout_width="263dp"
        android:layout_height="57dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/adlam_display"
        android:onClick="ulangi"
        android:text="@string/ulangi_kuis"
        android:textColor="#E91E63"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/introductionImage"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>
